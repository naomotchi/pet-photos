.header
  .header__top
    .header__top__logo
      .header__top__logoul
        = link_to root_path, id: "header_title" do
          Pet-Phots
        .header__top__logoli
          ペットのアルバム作成
    .header__top__user
      .header__top__user__info
        - if user_signed_in?
          = "ようこそ！#{current_user.nickname}さん"
        - else
          ようこそゲストさん
      - if user_signed_in?
        .header__top__user__mypage
          = link_to "マイページ", "/users/#{current_user.id}", class: "user_sign"
        .header__top__user__post
          = link_to "投稿する", new_photo_path, class: "user_sign"
        .header__top__user__logout
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "user_sign"
      - else
        .header__top__user__login
          = link_to "ログイン", new_user_session_path, class: "user_sign"
        .header__top__user__signin
          = link_to "新規登録", new_user_registration_path, class: "user_sign"