= render 'layouts/header'
.posts
  .posts__area
    .posts__box
      %h2 Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :nickname
          %br/
          = f.text_field :nickname, autofocus: true, maxlength: "6", id: "input-default"
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", id: "input-default"
        .field
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password", id: "input-default"
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", id: "input-default"
        .actions
          = f.submit "Sign up", id: "input-btn"
= render "devise/shared/links"
= render 'layouts/footer'